@model CompaniaModel
<div id="NuevaCompania" class=" card text-primary" style="border:none;">
    <h5>Registro persona</h5>
    <div class=" card-body text-center">
        <div class=" col-md-12">
            <form id="AltaCompania">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label></label>
                    <input id="NombreCompania" onkeypress="return soloLetras(event)" asp-for="NombreCompania" class="form-control" placeholder="Nombre de la compañia ">
                    <span asp-validation-for="NombreCompania" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label></label>
                    <input id="NombreContacto" onkeypress="return soloLetras(event)" asp-for="NombrePersonaContacto" class="form-control" placeholder="Nombre de la persona para contacto">
                    <span asp-validation-for="NombrePersonaContacto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label></label>
                    <input id="CorreoEle" asp-for="CorreoElectronico" class="form-control" placeholder="Correo Electronico">
                    <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label></label>
                    <input id="Telefono" onkeypress="return soloNumeros(event)" asp-for="Telefono" class="form-control" placeholder="Telefono">
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input id="Aceptar" class="form-check-input" type="checkbox" value="" onchange="doalert(this)">
                    <label style="font-size:10px;color:black;" class="form-check-label" for="flexCheckDefault">
                        He leido y aceto el <a style="color:darkblue;">Aviso de privacidad/Terminos y condiciones</a>
                    </label>
                </div>
              
                <div class="col-md-9">
                    <div id="ErrorAlert" class="alert alert-danger" style="display:none" role="alert">
                        Error en los datos enviados!
                    </div>
                    <div id="ExitoAlert" class="alert alert-success" style="display:none" role="alert">
                        Datos recibidos correctamente!
                    </div>
                </div>
                <div class=" card-footer text-center" style="background:none;">
                    <div class="form-group float-right">
                        <img id="AjaxLoader" alt="Enviando ..." style="display:none" src="~/img/carga.gif" />
                        &nbsp;&nbsp; 
                        <button id="SubmitBtn" type="submit" class="btn btn-primary">
                            Continuar
                        </button>
                    </div>
                </div>
            </form> 
        </div>
    </div>
</div>




